<div class="posts_container mypage_container">
  <h1 class="posts_box_title"><%- user.nickname %> 님이 추천한 게시물 목록</h1>
  <ul class="posts_box post_box_line">
    <li class="posts_list_title">제목</li>
    <li class="posts_list_user">작성자</li>
    <li class="posts_list_time">작성시간</li>
  </ul>
  <% user.liked_post.forEach(post => { %>
  <ul class="posts_box">
    <a href="/posts/<%= post._id %>">
      <li class="posts_list_title"><%= post.title %></li>
    </a>
    <li class="posts_list_user"><%= post.user.nickname%></li>
    <li class="posts_list_time"><%= formattedDate(post.createdAt) %></li>
  </ul>
  <% }); %>
</div>
