<%- include("./include/header") %>

<div class="posts_container">
  <h1 class="posts_box_title"><%- keyword %> 검색결과</h1>
  <ul class="posts_box post_box_line">
    <li class="posts_list">제목</li>
    <li class="posts_list">작성자</li>
    <li class="posts_list">작성시간</li>
  </ul>
  <% posts.forEach(post => { %>
  <ul class="posts_box">
    <a href="/posts/<%= post._id %>">
      <li class="posts_list_title"><%= post.title %></li>
    </a>
    <li class="posts_list_user"><%= post.user.nickname%></li>
    <li class="posts_list_time"><%= formattedDate(post.createdAt) %></li>
  </ul>
  <% }); %>
</div>

<%- include("./include/footer") %>
