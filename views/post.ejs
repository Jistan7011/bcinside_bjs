<%- include("./include/header") %>

<div class="post-container">
  <h1 class="post-category">
  <%= post.category %>조
  <h1>
  <div class="post-header-box">
    <h1 class="post-title">
      <%= post.title %>
    </h1>
    <span class="post-user"> <%= post.user.nickname %></span>
    <button class="user-block-btn">유저 차단</button>
    <span class="post-time"> <%= post.createdAt %></span>
  </div>
  <div class="post-contents">
    <%= post.content %>
  </div>
  <div class="post-comments-container">
    <% post.comments.forEach(comment => { %>
      <ul class="post-comments-box">
        <li><%= comment.user %></li>
        <li><%= comment.text %></li>
        <li><%= comment.createdAt %></li>
      </ul>
    <% }); %>
    <form class="post-comment-add">
      <input class="post-comment-input" name="text" type="text">
      <button class="post-comment-btn" type="submit">작성</button>
    </form>
  </div>
  
</div>
<%- include("./include/footer") %>